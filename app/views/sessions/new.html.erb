<h1>Log In!</h1>

<% if notice %>
  <p><%= notice %></p>
<% end %>

<%= form_tag '/sessions/create' do %>

  <div class="field">
    <%= label_tag :email %><br />
    <%= text_field_tag :email %>
  </div>

  <div class="field">
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </div>

  <div class="actions">
    <%= submit_tag "Log In" %>
  </div>

<% end %>
